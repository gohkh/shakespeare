import sys, argparse
import roman

TITLE = 'TITLE'
ACT, SCENE, ROMAN, LOCATION = 'ACT', 'SCENE', 'ROMAN', 'LOCATION'
CHARACTER, NUMBER, STRING, OPERATOR = 'CHARACTER', 'NUMBER', 'STRING', 'OPERATOR'
DIRECTION = 'DIRECTION'
TEXT = 'TEXT'
EOF = 'EOF'


class Token(object):
    def __init__(self, type, value):
        self.type = type
        self.value = value


eof_error = {'EOFError': 'File is empty'}
syntax_errors = {'MissingTitle': 'No title detected', 'ActNumber': 'ACT number is not a valid roman numeral', 'SceneNumber': 'SCENE number is not a valid roman numeral', 'MissingAct': 'Missing ACT', 'ActOrder': 'ACTs not in running order', 'SceneOrder': 'SCENEs not in running order'}


class Interpreter(object):
    def __init__(self, file, _input):
        if file == None:
            self.text = _input_
        else:
            with open(file,'r') as text:
                self.text = text.readlines()
            if len(self.text) == 0:
                print ('EOFError: ' + eof_error['EOFError'])
                sys.exit()
        self.line = 0
        self.column = 0
        self.token = None
        self.Line = self.text[self.line]
        self.Char = self.Line[self.column]


    def ParseError(self):
        raise Exception('Unable to parse')

    def MissingTitleError(self):
        raise Exception('No title detected')

    def RomanNumeralError(self):
        raise Exception('Invalid roman numeral as ACT / SCENE number')

    def OrderError(self):
        if self.token == ACT:
            raise Exception('SCENE before ACT')
        elif self.token == ROMAN:
            raise Exception('ACT numbers not in running order')


    def advance_line(self):
        self.line += 1
        self.column = 0
        if self.line >= len(self.text):
            self.Line = None
        else:
            self.Line = self.text[self.line]
            self.Char = self.Line[self.column]

    def advance_char(self):
        self.column += 1
        if self.Line != None and self.column >= len(self.Line):
            self.Char = None
        else:
            self.Char = self.Line[self.column]

    def skip_whitespace(self):
        while self.Char != None and self.Char.isspace():
            self.advance_char()


    def title(self):
        title = self.Line
        title = title.strip()
        return title

    def act(self):
        numeral = ''
        if self.Line[0:3] == ACT:
            for i in range(3):
                self.advance_char()
            self.skip_whitespace()
            while self.Char != None:
                numeral = numeral + self.Char
                self.advance_char()
        return roman.roman(numeral)

    def scene(self):
        numeral = ''
        if self.Line[0:5] == SCENE:
            for i in range(5):
                self.advance_char()
            self.skip_whitespace()
            while self.Char != None and self.Char != '.':
                numeral = numeral + self.Char
                self.advance_char()
        return roman.roman(numeral)


    def get_next_token(self):

        while self.Line is not None and self.Char is not None:
            if '#' in self.Line:
                self.Line = self.Line.split('#',1)[0] + '\n'

            self.Line = self.Line.replace('\n','')

            if self.Line.strip() == '':
                self.advance_line()
                continue

            if self.Line[0:3] == ACT:
                act = self.act()
                if act == None:
                    print ('SyntaxError: ' + syntax_errors['ActNumber'])
                    sys.exit()
                else:
                    token = Token(ACT, act)
                    self.advance_line()
                    return token

            if self.Line[0:5] == SCENE:
                scene = self.scene()
                if scene == None:
                    print ('SyntaxError: ' + syntax_errors['SceneNumber'])
                    sys.exit()
                else:
                    token = Token(SCENE, scene)
                    self.advance_line()
                    return token

            if self.title() is not None:
                token = Token(TITLE, self.title())
                self.advance_line()
                return token

            self.ParseError()
        return Token(EOF, None)


    def eat(self, token_type):
        if self.token.type == token_type:
            self.token = self.get_next_token()
        elif token_type == TITLE:
            print ('SyntaxError: ' + syntax_errors['MissingTitle'])
            sys.exit()
        elif token_type == ACT:
            print ('SyntaxError: ' + syntax_errors['MissingAct'])
            sys.exit()

    def expr(self):
        act_list = []

        self.token = self.get_next_token()

        Title = self.token.value
        self.eat(TITLE)

        Act = self.token.value
        self.eat(ACT)
        act_list.append(Act)
        if act_list != list(range(Act+1)[1:]):
            print ('SyntaxError: ' + syntax_errors['ActOrder'])
            sys.exit()
        scene_list = []

        Scene = self.token.value
        self.eat(SCENE)
        scene_list.append(Scene)
        if scene_list != list(range(Scene+1)[1:]):
            print ('SyntaxError: ' + syntax_errors['SceneOrder'])
            sys.exit()

        print('expr works')
        return Title, Act, Scene


def main(file):
    if file == None:
        _input_ = []
        while True:
            newline = input('>>> ')
            if newline == 'clear':
                _input_ = []
                continue
            elif newline == 'exit':
                sys.exit()
            else:
                _input_.append(newline + '\n')
            play = Interpreter(file, _input_)
    else:
        play = Interpreter(file, None)
    result = play.expr()


def init():
    parser = argparse.ArgumentParser()
    parser.add_argument('-f', '--file', type = str, default = None)
    args = parser.parse_args()

    main(args.file)

init()
